{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "errors"
  ],
  "properties": {
    "errors": {
      "$id": "#/properties/errors",
      "type": "object",
      "title": "The Errors Schema",
      "required": [
        "comments.body"
      ],
      "properties": {
        "comments.body": {
          "$id": "#/properties/errors/properties/comments.body",
          "type": "array",
          "title": "The Comments.body Schema",
          "items": {
            "$id": "#/properties/errors/properties/comments.body/items",
            "type": "string",
            "title": "The Items Schema",
            "default": "",
            "examples": [
              "is too short (minimum is 10 characters)"
            ],
            "pattern": "^(.*)$"
          }
        }
      }
    }
  }
}

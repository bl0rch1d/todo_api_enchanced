{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "errors"
  ],
  "properties": {
    "errors": {
      "$id": "#/properties/errors",
      "type": "object",
      "title": "The Errors Schema",
      "required": [
        "password",
        "username"
      ],
      "properties": {
        "password": {
          "$id": "#/properties/errors/properties/password",
          "type": "array",
          "title": "The Password Schema",
          "items": {
            "$id": "#/properties/errors/properties/password/items",
            "type": "string",
            "title": "The Items Schema",
            "default": "",
            "examples": [
              "can't be blank",
              "is too short (minimum is 8 characters)"
            ],
            "pattern": "^(.*)$"
          }
        },
        "username": {
          "$id": "#/properties/errors/properties/username",
          "type": "array",
          "title": "The Username Schema",
          "items": {
            "$id": "#/properties/errors/properties/username/items",
            "type": "string",
            "title": "The Items Schema",
            "default": "",
            "examples": [
              "can't be blank",
              "is too short (minimum is 3 characters)"
            ],
            "pattern": "^(.*)$"
          }
        }
      }
    }
  }
}
